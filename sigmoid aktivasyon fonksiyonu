#bu fonksiyon 0 ve 1 olarak çıktı verir grafikte şeklinin s ye benzemesi yüzÜnden (S)igmoid denmiştir
genelde output layerlarda activation lara tanımlanan "sigmoid" aktivasyon fonksyonunun basit kullanımı 
şu şekilde olabilir

import pandas as pd
import numpy as np
from keras.models import Sequential
from keras.layers import Dense

df = pd.read_csv(r"C:\Users\alper\Downloads\candy.csv")   


y = df['chocolate'].astype("float32")                                
x = df.drop(columns=['competitorname','nougat']).astype("float32")  #Yazı olan kolonları atıyoruz

model = Sequential()  #örnek hazır model  
  
model.add(Dense(16,activation='relu',input_dim=x.shape[1]))

model.add(Dense(32,activation='relu'))
model.add(Dense(32,activation='relu'))
          
model.add(Dense(1,activation='sigmoid'))  #relu haricinde output layerı sigmoid verilir

model.compile(loss='binary_crossentropy',optimizer='adam',metrics=['accuracy'])
model.fit(x=x,y=y,epochs=16,batch_size=16,validation_split=0.2)

